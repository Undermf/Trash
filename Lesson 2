package com.company;

import java.util.Scanner;

public class Main {

    public static void main(String[] args) {
        //hello
        String msg = "Добро пожаловать в калькулятор 1.0. " +
                "При вводе числа № 3 производятся следующие действия:" + "\n" +
                "1. Если 0 - сложение " + "\n" +
                "2. Если 1 - вычитание " + "\n" +
                "3. Если 2 - умножение" + "\n" +
                "4. Если 3 - деление" + "\n" +
                "Введите число №1:";
        String msg2 = "Введите число № 2";
        String msg3 = "Введите число № 3";

        System.out.println(msg);


//custom hello
        Scanner scanner = new Scanner(System.in);

        float first = scanner.nextFloat();
        System.out.println(msg2);

//custom hello 2
        float second = scanner.nextFloat();
        System.out.println(msg3);

        //Number 3
        int third = scanner.nextInt();

// boolean - true or false

        if (third == 0) {
            System.out.println(first + second);
        } else if (third == 1) {
            System.out.println(first - second);
        } else if (third == 2) {
            System.out.println(first * second);
        } else if (third == 3) {
            System.out.println(first / second);
        } else {
            System.out.println("Ошибка епта!");
        }
    }
}
